{
  "name": "fe",
  "private": true,
  "type": "module",
  "scripts": {
    "check": "tsc --noEmit && eslint . && prettier --check .",
    "types": "tsc --noEmit",
    "dev:client-only": "vite --port 3000",
    "dev:client-with-server": "TEKNE_TRPC_URL=http://localhost:3000/api/trpc vite --port 3000",
    "dev:all": "concurrently \"pnpm run dev:client-with-server\" \"pnpm run db\" \"pnpm run server:dev\"",
    "db": "docker compose up -f docker-compose.yml",
    "client:build": "vite build",
    "test": "vitest run",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "kysely": "kysely",
    "generate:routes": "node scripts/generate-client-routes.js",
    "server:dev": "DATABASE_URL=postgres://postgres:password@localhost/tekne tsx --watch src/server/index.ts",
    "server:start": "NODE_ENV=production tsx src/server/index.ts",
    "build": "pnpm run generate:routes && pnpm run client:build",
    "start": "pnpm run server:start",
    "prod": "NODE_ENV=production DATABASE_URL=postgres://postgres:password@localhost/tekne pnpm run start"
  },
